---
import { Github } from "simple-icons-astro";
import { projects, skillColorMap } from "./utils/data";
import type { Project } from "./utils/types";

import Modal from "./Modal";
---

<div class="mx-12" id="projects">
  <h1 class="my-24 text-center text-xl">Latest Projects</h1>
  <div
    class="grid grid-cols-1 gap-24 xl:mx-48 md:grid-cols-2 place-items-center"
  >
    {
      projects.map(
        (
          project: Project
          //   <Modal project={project} />
        ) => (
          <div class="group relative cursor-pointer">
            <div class="bg-white max-w-sm h-full w-full overflow-hidden shadow-lg relative z-10  rounded-lg transition-all group-hover:-translate-x-3">
              <div class="px-6 py-4">
                <div class="font-bold text-xl mb-2 hover:text-red-500 hover:cursor-pointer">
                  {project.title}
                </div>
                <p class="text-gray-700 text-base">{project.description}</p>
              </div>
              <div class="px-6 pt-4 pb-2">
                {project.technologies.map((technology: string) => {
                  return (
                    <span
                      class={`bg-[#${skillColorMap["React"]}] inline-block bg-gray-100 hover:bg-gray-200 hover:cursor-pointer rounded-md px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2`}
                    >
                      #{technology}
                    </span>
                  );
                })}
              </div>
              <div class="flex items-center justify-center gap-5">
                {project.links.website && (
                  <a
                    class="flex flex-col items-center justify-center hover:scale-105 transition-all"
                    href={`${project.links.website}`}
                  >
                    <svg
                      width="24"
                      height="24"
                      xmlns="http://www.w3.org/2000/svg"
                      fill-rule="evenodd"
                      clip-rule="evenodd"
                    >
                      <path d="M14.851 11.923c-.179-.641-.521-1.246-1.025-1.749-1.562-1.562-4.095-1.563-5.657 0l-4.998 4.998c-1.562 1.563-1.563 4.095 0 5.657 1.562 1.563 4.096 1.561 5.656 0l3.842-3.841.333.009c.404 0 .802-.04 1.189-.117l-4.657 4.656c-.975.976-2.255 1.464-3.535 1.464-1.28 0-2.56-.488-3.535-1.464-1.952-1.951-1.952-5.12 0-7.071l4.998-4.998c.975-.976 2.256-1.464 3.536-1.464 1.279 0 2.56.488 3.535 1.464.493.493.861 1.063 1.105 1.672l-.787.784zm-5.703.147c.178.643.521 1.25 1.026 1.756 1.562 1.563 4.096 1.561 5.656 0l4.999-4.998c1.563-1.562 1.563-4.095 0-5.657-1.562-1.562-4.095-1.563-5.657 0l-3.841 3.841-.333-.009c-.404 0-.802.04-1.189.117l4.656-4.656c.975-.976 2.256-1.464 3.536-1.464 1.279 0 2.56.488 3.535 1.464 1.951 1.951 1.951 5.119 0 7.071l-4.999 4.998c-.975.976-2.255 1.464-3.535 1.464-1.28 0-2.56-.488-3.535-1.464-.494-.495-.863-1.067-1.107-1.678l.788-.785z" />
                    </svg>
                    Website link
                  </a>
                )}
                {project.links.github && (
                  <a
                    class="flex flex-col items-center justify-center hover:scale-105 transition-all"
                    href={`${project.links.github}`}
                  >
                    <Github size={30} /> GitHub
                  </a>
                )}
              </div>
            </div>
            <div class="absolute left-0 top-0 h-full max-w-sm w-full rounded-lg bg-black transition-all group-hover:translate-x-4 group-hover:translate-y-4" />
          </div>
        )
      )
    }
    <a
      href="https://github.com/EmmanuelAllanMJ?tab=repositories"
      class="flex justify-center items-center bg-white max-w-sm h-full w-full overflow-hidden shadow-lg relative z-10 rounded-lg transition-all group-hover:-translate-x-3"
    >
      <div class="px-6 py-4">
        <div
          class="font-bold text-xl mb-2 hover:text-red-500 hover:cursor-pointer"
        >
          View My Github Repo
        </div>
      </div>
    </a>
  </div>
</div>
